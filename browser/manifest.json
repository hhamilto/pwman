{
  "manifest_version": 2,
  "name": "hurricane password manager",
  "version": "1.7",
  "description": "lololol",
  "icons": {
    "200": "icon-dev.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "*://localhost:3000/*"
  ],
  "browser_action": {
    "default_icon": "icon-dev.png",
    "default_title": "pwman",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "popup/vendor/luxon.js",
      "background-script.js"
    ]
  }
}
